@using System.Web.Mvc
@using System.Web.Mvc.Html
@functions{

    private new static HtmlHelper< object > Html
    {
        get { return ( ( WebViewPage ) WebPageContext.Current.Page ).Html; }
    }

}

@helper Header()
{
    <div>
        @MenuActionLink( "Home", "" )
        | @MenuActionLink( "Demoshop", "Demoshop" )
        | @MenuActionLink( "Reports", "Page/Reports" )
        | @MenuActionLink( "Resources", "Page/Resources" )
        | @MenuActionLink( "Contacts", "Page/Contacts" )
    </div>
    <hr/>
}

@helper Footer()
{
    <hr/>
    <div >
        @MenuLink( "Blog", "http://romankoshelev.info/tag/spreadbot/" )
        | @MenuLink( "Loc", "http://localhost/spreadbot/" )
        | @MenuLink( "Web", "http://www.spreadbot.net" )
        | @MenuLink( "SCM", "https://spreadbot-west-us.scm.azurewebsites.net/DebugConsole/" )
        | @MenuLink( "Azure", "https://manage.windowsazure.com/@romakoshgmail.onmicrosoft.com#Workspaces/WebsiteExtension/Website/spreadbot-west-us/dashboard" )
        | @MenuLink( "Jira", "https://rk-dev.atlassian.net/secure/RapidBoard.jspa?rapidView=2" )
        | @MenuLink( "Github", "https://github.com/RomanKoshelev/spreadbot" )
        | @MenuLink( "ErrorLog", "/Log/Error" )
        | @MenuLink( "TraceLog", "/Log/Trace" )
        | @MenuLink( "BugGenerator", "/Bug" )
    </div>
}

@helper MenuActionLink( string text, string controller, string action = "Index" )
{
    @Html.ActionLink(
        text,
        action,
        controller,
        null,
        new { @class = "" } )
}

@helper MenuLink( string text, string href )
{
    <a href="@href">@text</a>
}